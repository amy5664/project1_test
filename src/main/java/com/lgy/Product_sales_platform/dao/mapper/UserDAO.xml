<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lgy.Product_sales_platform.dao.mapper.UserDAO">

    <!-- resultMap: DB 컬럼 → UserDto 필드 매핑 -->
    <resultMap id="UserMap" type="com.lgy.Product_sales_platform.dto.UserDto">
        <result column="MEMBER_ID" property="memberId"/>
        <result column="MEMBER_PW" property="memberPw"/>
        <result column="MEMBER_NAME" property="memberName"/>
        <result column="MEMBER_EMAIL" property="memberEmail"/>
        <result column="MEMBER_PHONE" property="memberPhone"/>
        <result column="MEMBER_ADDR" property="memberAddr"/>
    </resultMap>

    <!-- 전체 회원 조회 -->
    <select id="getUserList" resultMap="UserMap">
        SELECT MEMBER_ID, MEMBER_PW, MEMBER_NAME, MEMBER_EMAIL, MEMBER_PHONE, MEMBER_ADDR
        FROM USER_DB
        ORDER BY MEMBER_ID
    </select>

    <!-- 회원 상세 -->
    <select id="getUser" parameterType="string" resultMap="UserMap">
        SELECT MEMBER_ID, MEMBER_PW, MEMBER_NAME, MEMBER_EMAIL, MEMBER_PHONE, MEMBER_ADDR
        FROM USER_DB
        WHERE MEMBER_ID = #{memberId}
    </select>

</mapper>
